<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Transaction.
    -->
    <changeSet id="20171209040534-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="withdraw_account_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction_withdraw_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_account"/>

        <addForeignKeyConstraint baseColumnNames="deposit_account_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction_deposit_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_account"/>

    </changeSet>
</databaseChangeLog>
